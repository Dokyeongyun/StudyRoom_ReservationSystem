<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myStatus_dateStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#4e000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">@font/bmdohyeon</item>
    </style>

    <style name="myStatus_roomTVStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#8CFF262D</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/bmdohyeon2</item>
    </style>

    <style name="myStatus_usingStatusStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/bmdohyeon2</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="myStatus_nothing">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:fontFamily">@font/bmdohyeon2</item>
    </style>

</resources>